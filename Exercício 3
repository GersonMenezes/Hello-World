#include<stdio.h>
#include<stdlib.h>
#include<string.h>

void test(int *p, int m, int n){
    int prod = (m-1)*n;
    for(int i=0; i<(m-1); i++){
        for(int x=0; x<n; x++){
            printf("\nDiga o valor %d da matriz: ", x+1);
            scanf("%d", &(*p));
            (*p)++;
        }
    p++;
    }
}
void print(int *p, int m, int n){
    int prod = (m-1)*n;
    for(int i=0; i<(m-1); i++){
        for(int x=0; x<n; x++){
            printf("\nOs valores sÃ£o %i", *(p));
            (*p)++;
        }
    p++;
    }
}

int main(){

    int *p1, *p2, m = 3, n=4;

    p1 = (int*) malloc(m*sizeof(int));
    p2 = p1;
    
        for(int x=0; x<(m-1); x++){

            *p1 = (int*) malloc(n * sizeof(int));
            p1++;
        }
    test(p2, m, n);
    print(p2, m, n);

}
